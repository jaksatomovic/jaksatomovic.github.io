---
import BaseLayout from "../../layouts/BaseLayout.astro";

const apps = [
  {
    name: "Snipbox",
    description:
      "A macOS-inspired snippet hub that lives in your browser. Save, tag, search, and export snippets without leaving the page you’re on.",
    href: "/apps/snipbox",
    tech: ["TypeScript", "Chrome Extensions", "Tailwind CSS"],
  },
  {
    name: "Try Airshare",
    description:
      "Lightning-fast handoffs for designers and engineers. Upload builds, share self-expiring links, and keep clients moving without fiddly storage permissions.",
    href: "https://tryairshare.com",
    tech: ["Next.js", "TypeScript", "Tailwind CSS"],
    external: true,
  },
  {
    name: "Keero",
    description:
      "Decentralized, end-to-end secure chat for product teams. Built on OpenMLS and Iroh so teams keep full ownership over their data—currently in prototype.",
    href: "https://keero.io",
    tech: ["OpenMLS", "Rust", "Iroh"],
    external: true,
    disabled: true,
    status: "In prototype",
  },
];
---

<BaseLayout>
  <section class="px-4 py-16 sm:px-6 lg:py-24">
    <div class="mx-auto flex w-full max-w-4xl flex-col gap-12">
      <div class="space-y-4 text-center">
        <p class="text-xs uppercase tracking-[0.4em] text-primary/70 dark:text-white/70">Product Studio</p>
        <h1 class="text-4xl font-semibold tracking-tight text-primary dark:text-white sm:text-5xl">
          Applications I’m building
        </h1>
        <p class="text-base text-zinc-500 dark:text-zinc-400 sm:text-lg">
          Focused, opinionated tools—built hands-on, shipped fast, and iterated with real users.
        </p>
      </div>

      <div class="space-y-6">
        {apps.map((app) => (
          <article
            class={`rounded-3xl border border-primary/10 bg-white/70 p-8 shadow-lg shadow-primary/5 transition hover:-translate-y-1 hover:border-primary/30 hover:shadow-primary/20 dark:border-white/10 dark:bg-secondary/60 dark:hover:border-white/20 ${app.disabled ? "opacity-60" : ""}`}
          >
            <div class="flex flex-col gap-6 lg:flex-row lg:items-center lg:justify-between">
              <div class="space-y-3">
                <h2 class="text-2xl font-semibold text-primary dark:text-white">{app.name}</h2>
                <p class="max-w-2xl text-sm text-zinc-500 dark:text-zinc-400 sm:text-base">{app.description}</p>
                <ul class="flex flex-wrap gap-2 text-xs font-medium uppercase tracking-wide text-primary/60 dark:text-white/60">
                  {app.tech.map((stack) => (
                    <li class="rounded-full border border-primary/10 px-4 py-1 dark:border-white/15">{stack}</li>
                  ))}
                </ul>
              </div>
              <div class="flex items-center gap-3">
                {app.status ? (
                  <span class="rounded-full border border-primary/10 px-4 py-2 text-xs font-semibold uppercase tracking-[0.2em] text-primary/50 dark:border-white/15 dark:text-white/50">
                    {app.status}
                  </span>
                ) : (
                  <a
                    href={app.href}
                    target={app.external ? "_blank" : undefined}
                    rel={app.external ? "noopener noreferrer" : undefined}
                    class="inline-flex items-center gap-2 rounded-full bg-primary px-5 py-2 text-sm font-semibold text-white transition hover:translate-x-1 hover:bg-primary/90 dark:bg-white dark:text-primary dark:hover:bg-white/90"
                  >
                    {app.cta ?? (app.external ? "Visit website" : "Explore app")}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M5 12h14" />
                      <path d="M12 5l7 7-7 7" />
                    </svg>
                  </a>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

