---
import BaseHead from "../components/BaseHead.astro";
import CanarinHeader from "../components/layout/CanarinHeader.astro";
import Footer from "../components/layout/Footer.astro";
---

<html lang="en">
  <head>
    <BaseHead />
    <title>Canarin Garage | CX500 Custom Build</title>
    <meta
      name="description"
      content="Follow the Canarin Garage custom cafe racer build of a 1981 Honda CX500. Build log, specs, gallery, and contact details."
    />
  </head>

  <body class="min-h-screen bg-zinc-100 font-sans text-primary antialiased dark:bg-primary">
    <div class="flex min-h-screen flex-col">
      <CanarinHeader />
      <main class="flex-1">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>

